{
  "name": "@pineapple-ui/core",
  "version": "0.0.0",
  "description": "Core styled components for Pineapple UI",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./alert": {
      "types": "./dist/alert/index.d.ts",
      "import": "./dist/alert/index.js",
      "require": "./dist/alert/index.cjs"
    },
    "./button": {
      "types": "./dist/button/index.d.ts",
      "import": "./dist/button/index.js",
      "require": "./dist/button/index.cjs"
    },
    "./card": {
      "types": "./dist/card/index.d.ts",
      "import": "./dist/card/index.js",
      "require": "./dist/card/index.cjs"
    },
    "./checkbox": {
      "types": "./dist/checkbox/index.d.ts",
      "import": "./dist/checkbox/index.js",
      "require": "./dist/checkbox/index.cjs"
    },
    "./dialog": {
      "types": "./dist/dialog/index.d.ts",
      "import": "./dist/dialog/index.js",
      "require": "./dist/dialog/index.cjs"
    },
    "./input": {
      "types": "./dist/input/index.d.ts",
      "import": "./dist/input/index.js",
      "require": "./dist/input/index.cjs"
    },
    "./select": {
      "types": "./dist/select/index.d.ts",
      "import": "./dist/select/index.js",
      "require": "./dist/select/index.cjs"
    },
    "./toast": {
      "types": "./dist/toast/index.d.ts",
      "import": "./dist/toast/index.js",
      "require": "./dist/toast/index.cjs"
    },
    "./form-field": {
      "types": "./dist/form-field/index.d.ts",
      "import": "./dist/form-field/index.js",
      "require": "./dist/form-field/index.cjs"
    },
    "./flex": {
      "types": "./dist/flex/index.d.ts",
      "import": "./dist/flex/index.js",
      "require": "./dist/flex/index.cjs"
    },
    "./box": {
      "types": "./dist/box/index.d.ts",
      "import": "./dist/box/index.js",
      "require": "./dist/box/index.cjs"
    },
    "./badge": {
      "types": "./dist/badge/index.d.ts",
      "import": "./dist/badge/index.js",
      "require": "./dist/badge/index.cjs"
    },
    "./table": {
      "types": "./dist/table/index.d.ts",
      "import": "./dist/table/index.js",
      "require": "./dist/table/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@pineapple-ui/icons": "workspace:*",
    "@pineapple-ui/primitives": "workspace:*",
    "@pineapple-ui/tokens": "workspace:*",
    "@pineapple-ui/utils": "workspace:*",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-tooltip": "^1.1.6",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "class-variance-authority": "^0.7.1"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@pineapple-ui/tsconfig": "workspace:*",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "tsup": "^8.3.5"
  }
}
