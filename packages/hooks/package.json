{
  "name": "@pineapple-ui/hooks",
  "version": "0.0.0",
  "description": "Reusable React hooks for Pineapple UI",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@pineapple-ui/tsconfig": "workspace:*",
    "@testing-library/react": "^16.0.1",
    "@types/react": "^19.0.0",
    "tsup": "^8.3.5"
  }
}
